a=np.array([10,2,2,4,5,3,9,8,9,7])
mask=a>5
print(mask)

#부분집합 구하기(selection)
selected=a[a>5]
print(selected)

#논리식 결합
selected=a[(a<5)|(a<3)]
print(selected)

